{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "github>txqueuelen/.github//renovate/automerge-github-workflows-all-versions-bump.json#test-presets",
    "github>txqueuelen/.github//renovate/automerge-docker-version-digests.json#test-presets",
    "github>txqueuelen/.github//renovate/automerge-all-package-version-patch-bump.json#test-presets",
    "github>txqueuelen/.github//renovate/automerge-all-package-version-minor-bump.json#test-presets"
  ],
  "regexManagers": [
    {
      // Update PowerDNS tag in the Dockerfile.
      "fileMatch": [
        "^Dockerfile$"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "PowerDNS/pdns",
      "extractVersionTemplate": "^auth-(?<version>.*)$",
      "matchStrings": [
        "ARG PDNS_VERSION=(?<currentValue>.*)"
      ]
    }
  ],
  "packageRules": [
    {
      // Group all debian images together.
      "matchPackagePatterns": [
        "debian"
      ],
      "matchPaths": [
        "Dockerfile"
      ],
      "groupName": "Debian base images",
    }
  ]
}